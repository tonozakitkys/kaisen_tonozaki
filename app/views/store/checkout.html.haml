.depot-form
  = error_messages_for 'order'

  - form_for :order, :url => save_order_path do |form|
    %fieldset
      %legend あなたのお届け先情報をご記入ください

      %div
        = form.label :name, "お名前："
        = form.text_field :name, :size => 40, :placeholder => "お名前を入力してください"

      %div
        = form.label :address, "ご住所："
        = form.text_area :address, :rows => 3, :cols => 40, :placeholder => "商品の送付先を入力してください"

      %div
        = form.label :email, "Eメール："
        = form.text_field :email, :size => 40

      %div
        = form.label :pay_type, "お支払："
        = form.select :pay_type, Order::PAYMENT_TYPES, :prompt => "お支払方法を選択してください"

      = submit_tag "注文する", :class => "submit"
